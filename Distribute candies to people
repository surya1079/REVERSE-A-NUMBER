class Solution:
		def distributeCandies(self, candies: int, num_people: int) -> List[int]:
			result = [0] * num_people
			give = 1
			index = 0
			
			while candies > 0:
				# Give the current amount or remaining candies if less
				current_give = min(give, candies)
				result[index] += current_give
				candies -= current_give
				
				# Move to next person, wrap around if needed
				index = (index + 1) % num_people
				give += 1
			
			return result
