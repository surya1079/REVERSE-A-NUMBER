class Solution:
		def smallestRangeI(self, nums: List[int], k: int) -> int:
			min_val = min(nums)
			max_val = max(nums)
			
			# We can increase the minimum by at most k and decrease the maximum by at most k
			# The best we can do is bring them as close together as possible
			min_val += k
			max_val -= k
			
			# If after adjustments, min_val > max_val, we can make them equal (score 0)
			# Otherwise, the score is max_val - min_val
			return max(0, max_val - min_val)
